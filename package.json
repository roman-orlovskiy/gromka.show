{
  "name": "gromka-show",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "docker compose -p gromka-show -f docker-compose.dev.yml up",
    "dev:build": "docker compose -p gromka-show -f docker-compose.dev.yml up --build",
    "dev:rebuild": "docker compose -p gromka-show -f docker-compose.dev.yml build --no-cache",
    "dev:down": "docker compose -p gromka-show -f docker-compose.dev.yml down",
    "prod": "docker compose -p gromka-show -f docker-compose.prod.yml up -d --build",
    "prod:down": "docker compose -p gromka-show -f docker-compose.prod.yml down",
    "db:generate": "docker compose -p gromka-show -f docker-compose.dev.yml exec app npx prisma generate",
    "db:migrate:dev": "docker compose -p gromka-show -f docker-compose.dev.yml exec app npx prisma migrate dev",
    "db:migrate:deploy": "docker compose -p gromka-show -f docker-compose.prod.yml exec app npx prisma migrate deploy",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.11.3",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^16.6.1",
    "nuxt": "^4.2.2",
    "pg": "^8.16.3",
    "swiper": "^12.0.3",
    "vue": "^3.5.27",
    "vue-router": "^4.6.4"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.14.0",
    "prisma": "^7.3.0",
    "sass-embedded": "^1.97.2"
  }
}
